<?xml version="1.0"?>
<odoo>

    <record id="view_survey_certificate_template_tree" model="ir.ui.view">
        <field name="name">survey.certificate.template.tree</field>
        <field name="model">survey.certificate.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="filename"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_survey_certificate_template_form" model="ir.ui.view">
        <field name="name">survey.certificate.template.form</field>
        <field name="model">survey.certificate.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="file" filename="filename"/>
                            <field name="filename" invisible="1"/>
                            <field name="active"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <!-- Tab: Name Settings -->
                        <page string="Name Settings">
                            <group>
                                <group>
                                    <field name="name_position_y"/>
                                    <field name="name_font_size"/>
                                </group>
                                <group>
                                    <field name="name_color" widget="color"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Tab: Date Settings -->
                        <page string="Date Settings">
                            <group>
                                <group>
                                    <field name="show_date"/>
                                    <field name="date_position_offset" invisible="not show_date"/>
                                    <field name="date_font_size" invisible="not show_date"/>
                                </group>
                                <group>
                                    <field name="date_color" widget="color" invisible="not show_date"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Tab: Logo Settings -->
                        <page string="Logo Settings">
                            <group>
                                <group>
                                    <field name="show_logo"/>
                                    <field name="logo_image" widget="image" invisible="not show_logo"/>
                                    <field name="logo_width" invisible="not show_logo"/>
                                </group>
                                <group>
                                    <field name="logo_position_x" invisible="not show_logo"/>
                                    <field name="logo_position_y" invisible="not show_logo"/>
                                </group>
                            </group>
                        </page>
                        
                        <!-- Tab: Signature Settings -->
                        <page string="Signature Settings">
                            <group>
                                <group>
                                    <field name="show_signature"/>
                                    <field name="signature_image" widget="image" invisible="not show_signature"/>
                                    <field name="signature_width" invisible="not show_signature"/>
                                    <field name="signature_label" invisible="not show_signature"/>
                                </group>
                                <group>
                                    <field name="signature_position_x" invisible="not show_signature"/>
                                    <field name="signature_position_y" invisible="not show_signature"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
